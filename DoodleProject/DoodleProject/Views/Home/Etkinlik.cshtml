@model EntityLayer.Concrete.Activity
@{
    ViewBag.Title = "Etkinlik";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<br />
<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Etkinlik</h1>
                    <p class="lead mb-4 text-white">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolorem, adipisci?</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-6">



                <form action="#" class="p-5 bg-white">


                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="email">Etkinlik Konusu</label>
                            <input type="email" id="email" class="form-control">
                        </div>
                    </div>


                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="message">Etkinlik Detayı</label>
                            <textarea name="message" id="message" cols="30" rows="3" class="form-control" placeholder=""></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Platform</label>
                            <input type="text" id="fname" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">Süre</label>
                            <input type="text" id="lname" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="email">Tarih Seçimi</label>
                            <input type="email" id="email" class="form-control">
                        </div>
                    </div>

                    <br />

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Gönder" class="btn btn-primary py-2 px-4 text-white">
                        </div>
                    </div>


                </form>
            </div>
            
        </div>
    </div>
</div>

